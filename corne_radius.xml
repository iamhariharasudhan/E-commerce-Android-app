<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set a background color for the item -->
    <solid android:color="@color/white" /> <!-- You can change this to any color you like -->

    <!-- Define corner radius -->
    <corners android:radius="20dp" /> <!-- You can adjust the radius as needed -->

    <!-- Optional: Add padding inside the item -->
    <padding
        android:left="10dp"
        android:top="30dp"
        android:right="10dp"
        android:bottom="30dp" />

    <!-- Optional: Add a stroke (border) if needed -->
    <stroke
        android:width="1dp"
        android:color="@color/grey" /> <!-- You can adjust stroke color and width -->
</shape>
